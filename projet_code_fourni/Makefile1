CC=gcc
CFLAGS=-Wall -Wpedantic -std=c11 -Wextra -g
RM=rm -f
OBJ=bloc.o inode.o gerer_sf_v1.o
EXE=gerer_sf_v1

$(EXE): $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(EXE)

gerer_sf_v1.o: gerer_sf_v1.c inode.h bloc.h
	$(CC) $(CFLAGS) -c gerer_sf_v1.c

inode.o: inode.c inode.h bloc.h
	$(CC) $(CFLAGS) -c inode.c

bloc.o: bloc.c bloc.h
	$(CC) $(CFLAGS) -c bloc.c

.PHONY: clean

clean:
	$(RM) $(OBJ) $(EXE)